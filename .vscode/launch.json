    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeVersion": "16",
            "runtimeArgs": ["--loader", "ts-node/esm", "--nolazy"],
            "args": ["src/main.ts"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}